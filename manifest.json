{
  "manifest_version": 3,
  "name": "Remove YouTube Shorts",
  "version": "1.0",
  "description": "This extension removes the Shorts link from YouTube sidebar.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon-128.png",
    "256": "icon-256.png"
  }
}
